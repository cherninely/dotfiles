#!/usr/bin/env bash

if [[ $1 ]]; then
    TEXT=$1
else
    TEXT="tesla"
fi

PWD=`pwd`
PATH_ARRAY=(${PWD//\// })

USER=${PATH_ARRAY[1]}
WC_NAME=${PATH_ARRAY[2]}

if [[ ${PATH_ARRAY[3]} == "report" ]]; then
    PROJECT=${PATH_ARRAY[6]}
else
    PROJECT=${PATH_ARRAY[3]}
fi

case $PROJECT in
    video3) WC_PATH="video/search?";;
    video_touch_phone) WC_PATH="video/touch/search?noredirect=1&";;
    video_touch_pad) WC_PATH="video/pad/search?noredirect=1&";;
    images3) WC_PATH="images/search?";;
    images_touch_phone) WC_PATH="images/touch/search?noredirect=1&";;
    images_touch_pad) WC_PATH="images/pad/search?noredirect=1&";;
    *) WC_PATH=$PROJECT
esac;

echo "http://$USER-d-$WC_NAME.`hostname`/${WC_PATH}text=$TEXT"
