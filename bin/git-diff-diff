#!/bin/sh
# Diff на diff'ы локальной ветки относительно dev и удалённой ветки относительно origin/dev
# Полезно, но мозговзрывно, по непривычке
# Часто можно обнаружить нежелательные изменения с помощью этого маргинального инструмента ;)

    git diff $(git merge-base origin/$(git-get-br) origin/$(git-get-default-branch)) origin/$(git-get-br) > 1.diff \
 && git diff $(git merge-base $(git-get-br) origin/$(git-get-default-branch)) $(git-get-br) > 2.diff \
 && diff 1.diff 2.diff | colordiff | less -r \
 && rm 1.diff 2.diff
